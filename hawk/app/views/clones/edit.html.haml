.container-fluid
  .row
    %h1
      = icon_text "copy", _("Edit Clone"), class: "page"
      .pull-right
        .btn-group{ role: "group" }
          = link_to icon_text("trash", _("Delete")), cib_clone_path(cib_id: @cib.id, id: @clone.id), method: "delete", class: "btn btn-default", data: { confirm: _("Are you sure you wish to delete %s?") % @clone.id }
          = link_to icon_text("list-ul", _("List")), cib_clones_path, class: "btn btn-default"

  .row
    = render partial: "form", locals: { cib: @cib, clone: @clone }

- content_for :rightbar do
  .container-fluid{ data: { spy: "affix" } }
    .row.clone
      = localized_help_for :resources, :clone

    - @clone.mapping.each do |key, values|
      - next unless values[:longdesc]

      .row{ class: key }
        %h2.margin-bottom
          = key

        = simple_format values[:longdesc]
