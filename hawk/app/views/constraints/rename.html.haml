.container-fluid
  %form#rename-constraint.form-horizontal{ role: :form, method: :post, action: rename_cib_constraint_url(cib_id: @cib.id) }
    .modal-header
      %h3.modal-title
        = _("Rename Constraint")
    .modal-body
      %input{type: :hidden, name: request_forgery_protection_token.to_s, value: form_authenticity_token}
      %input{type: :hidden, name: :source, value: @source}
      .form-group
        %label.col-sm-5.control-label{ for: "from" }
          = _("Rename")
        .col-sm-7
          %input#from.form-control.text-field{ name: :id, type: :text, readonly: :readonly, value: @constraint.id }
      .form-group
        %label.col-sm-5.control-label{ for: "to" }
          = _("To")
        .col-sm-7
          %input#to.form-control.text-field{ name: :to, type: :text, value: @constraint.id }

    .modal-footer
      %button.btn.btn-default{type: :button, data: { dismiss: :modal }}
        = _("Cancel")
      %button.btn.btn-primary{type: :submit}
        = icon_text "save", _("Rename")
