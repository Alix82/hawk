.container-fluid
  .row
    %h1
      = icon_text "group", _("Groups"), class: "page"
      .pull-right
        .btn-group{ role: "group" }
          = link_to icon_text("plus", _("Create")), new_cib_group_path, class: "btn btn-default"

  .row
    .panel.panel-default
      %table.table.table-striped.groups

- content_for :rightbar do
  .container-fluid{ data: { spy: "affix" } }
    .row.help-title
      = localized_help_for :resources, :primitive

    - Group.mapping.each do |key, values|
      - next unless values[:longdesc]
      .row.help-item{ class: key }
        %h2.margin-bottom
          = key

        = simple_format values[:longdesc]
