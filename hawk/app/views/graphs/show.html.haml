.container-fluid
  %h1
    = icon_text "line-chart", _("Graph"), class: "page"

  .panel.panel-default
    .panel-body
      .graph-placeholder.text-center
        = '<i class="fa fa-spinner fa-spin fa-4x"></i>'.html_safe
      .graph-image
        = image_tag graph_path(format: "svg", t: Time.now.to_i), class: "img-responsive center-block", alt: _("Graph")
:javascript
  $(window).load(function() {
    $(".graph-placeholder").slideUp();
  });
