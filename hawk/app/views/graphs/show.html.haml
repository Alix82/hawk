.container-fluid
  %h1
    = icon_text "line-chart", _("Graph"), class: "page"
    .pull-right
      .btn-group{ role: "group" }
        = link_to icon_text("file-o", _("Edit")), edit_cib_path(current_cib.id), class: "btn btn-default"

  .panel.panel-default
    .panel-body
      .graph-placeholder.text-center
        = '<i class="fa fa-spinner fa-spin fa-4x"></i>'.html_safe
      .graph-image
        = image_tag cib_graph_path(cib_id: current_cib.id, format: "svg", t: Time.now.to_i), class: "img-responsive center-block", alt: _("Graph")
:javascript
  $(window).load(function() {
    $(".graph-placeholder").slideUp();
  });
