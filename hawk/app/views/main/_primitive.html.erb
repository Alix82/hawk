<div id="prim-<%=h res[:id] %>" class="res-primitive <%= if res[:running_on].empty? then 'rs-stopped' else 'rs-running' end %>">
  <% # TODO: localize (', ') ? %>
  <%=h res[:id] %>: <span id="prim-<%=h res[:id] %>::state"><%= if res[:running_on].empty? then _('Stopped') else _('Started: ') + res[:running_on].join(', ') end %></span>
</div>
